
<h1>List of to_do</h1>
<br/>
<p><a href="/todos/new">New</a></p> 

<% @todos.each do |todo| %>
<h2>
	<%= todo.title %>
</h2>
<h3>
  <%= todo.datedo %>
</h3>
<p>
	<%= todo.text %>
</p>

<p>
	<%= link_to 'Show', todo_path(todo) %> | 
	<%= link_to 'Edit', edit_todo_path(todo) %> |
	<%= link_to 'Destroy', todo_path(todo), method: :delete, data: { confirm: 'Are you sure?' } %>
	<li>

      <div class="ui checkbox">
        <input type="checkbox" data-id="<%= todo.id %>"<%= todo.title ? ' checked="checked"' : '' %>
        <p>Not complete</p>
      </div>

    </li>
    <li>

      <div class="ui checkbox">
        <input type="checkbox" data-id="<%= todo.id %>"<%= todo.title ? ' checked="checked"' : '' %>
        <p>Complete! ;-)</p>
      </div>

    </li>

</p>

<hr />
<% end %>